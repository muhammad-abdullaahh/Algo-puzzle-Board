@{
    ViewData["Title"] = "Knight's Tour";
}

<div class="space-y-6 animate-fade-in-up">
    <div class="glass-panel algo-header">
        <div class="header-left">
            <h1 style="font-size: 1.875rem; font-weight: bold; background: linear-gradient(135deg, #34d399 0%, #14b8a6 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                Knight's Tour
            </h1>
            <p style="color: #9ca3af; margin-top: 0.25rem;">Warnsdorff's Heuristic (Graph Traversal)</p>
        </div>
        <div class="header-right">
            <div style="display: flex; flex-direction: column; align-items: end; margin-right: 1rem;">
                <span id="timerDisplay" style="font-family: monospace; font-size: 1.25rem; color: #facc15; font-weight: bold;">00:00</span>
                <span id="scoreDisplay" style="font-size: 0.875rem; color: #94a3b8;">Score: 0</span>
            </div>
            <button id="hintBtn" class="btn btn-secondary" style="border-color: #facc15; color: #facc15;">
                <span style="margin-right: 0.5rem">ðŸ’¡</span>Hint
            </button>
            <button id="resetBtn" class="btn btn-secondary">Reset</button>
            <button id="solveBtn" class="btn btn-primary" style="background: linear-gradient(135deg, #10b981 0%, #14b8a6 100%);">Start Tour</button>
        </div>
    </div>

    <div class="puzzle-grid">
        <div class="glass-panel" style="padding: 2rem; border-radius: 1rem; display: flex; justify-center; align-items: center; min-height: 500px;">
            <div style="position: relative; width: 100%; max-width: 500px; aspect-ratio: 1;">
                <!-- Chessboard Grid -->
                <div id="knightBoard" style="display: grid; grid-template-columns: repeat(8, 1fr); grid-template-rows: repeat(8, 1fr); width: 100%; height: 100%; gap: 1px; background: #1e293b; padding: 4px; border-radius: 0.5rem; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5); border: 4px solid #334155; position: relative; z-index: 20;">
                </div>
                
                <!-- SVG Path Overlay -->
                <svg id="pathSvg" style="position: absolute; inset: 0; width: 100%; height: 100%; pointer-events: none; z-index: 30;">
                    <defs>
                        <marker id="arrow" markerWidth="10" markerHeight="10" refX="5" refY="3" orient="auto" markerUnits="strokeWidth">
                            <path d="M0,0 L0,6 L9,3 z" fill="#34d399" />
                        </marker>
                    </defs>
                </svg>
            </div>
        </div>

        <div class="glass-panel" style="padding: 1.5rem; border-radius: 1rem;">
            <div>
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.5rem;">Tour Status</h3>
                <div id="resultOverlay" style="position: absolute; inset: 0; display: none; align-items: center; justify-content: center; pointer-events: none; z-index: 10;">
                    <div style="background: rgba(15, 23, 42, 0.9); padding: 1.5rem; border-radius: 1rem; border: 1px solid #10b981; text-align: center; backdrop-filter: blur(4px);">
                        <h2 style="font-size: 1.5rem; font-weight: bold; color: #34d399; margin-bottom: 0.5rem;">Tour Completed!</h2>
                        <p style="color: #cbd5e1; font-size: 1.125rem; margin-bottom: 1rem;">Moves: <span id="resultMovesValue" style="color: #6ee7b7; font-weight: bold;">0</span></p>
                        <p style="color: #94a3b8; font-size: 0.875rem; margin-bottom: 1rem;">Score: <span id="resultScoreValue">0</span></p>
                        <button id="closeResultBtn" class="btn btn-sm btn-primary" style="pointer-events: auto;">Close</button>
                    </div>
                </div>
                <div class="stat-item" style="justify-content: space-between; margin-bottom: 1rem;">
                    <span>Visited:</span>
                    <span id="visited" style="font-family: monospace; color: #34d399; font-size: 1.125rem;">0 / 64</span>
                </div>
                <div class="progress-bar">
                    <div id="progressFill" class="progress-fill" style="width: 0%;"></div>
                </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); margin-top: 1.5rem; padding-top: 1rem;">
                 <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.75rem;">Step-by-Step Guide</h3>
                 <div id="explanationText" style="margin-bottom: 1rem; font-size: 0.875rem; color: #cbd5e1; min-height: 3rem; background: rgba(0,0,0,0.2); padding: 0.5rem; border-radius: 0.5rem;">
                     Click a cell to set starting position.
                 </div>
                 <div id="stepControls" style="display: none; gap: 0.5rem; justify-content: center;">
                     <button id="prevStepBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">&larr;</button>
                     <button id="pauseBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">||</button>
                     <button id="nextStepBtn" class="btn btn-sm btn-secondary" style="padding: 0.25rem 0.75rem;">&rarr;</button>
                 </div>
            </div>

            <div style="border-top: 1px solid rgba(255, 255, 255, 0.1); margin-top: 1.5rem; padding-top: 1rem;">
                <h3 style="font-size: 1.125rem; font-weight: 600; color: white; margin-bottom: 0.5rem;">Warnsdorff's Rule</h3>
                <p style="font-size: 0.875rem; color: #9ca3af;">
                    Always move to the square from which the knight has the <strong style="color: white;">fewest onward moves</strong>.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/knightstour.js"></script>
}
